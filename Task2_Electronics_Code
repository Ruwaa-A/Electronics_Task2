#include <Servo.h>

Servo myServo8; 
Servo myServo9; 

int pos8 = 0;          
int dir8 = 1;           

int pos9 = 0;           
int dir9 = 1;             


unsigned long previousMillis = 0; 
const long interval = 15;        

void setup()   {
  myServo8.attach(8); 
  myServo9.attach(9); 

  myServo8.write(pos8);
  myServo9.write(pos9);
}


void loop() {
  unsigned long currentMillis = millis(); 


  if (currentMillis - previousMillis >= interval) {
    previousMillis = currentMillis; 
    
    pos8 += dir8; 

    if (pos8 >= 180) {
      pos8 = 180; 
      dir8 = -1;      
    }
    
    else if (pos8 <= 0) {
      pos8 = 0;   
      dir8 = 1;   
    }
    
    myServo8.write(pos8); 

    pos9 += dir9; 
    
    
    if (pos9 >= 90) { 
      pos9 = 90;
      dir9 = -1; 
    } 
    
    else if (pos9 <= 0) {
      pos9 = 0;
      dir9 = 1;  
    }
    
    myServo9.write(pos9); 
    
  }
}
